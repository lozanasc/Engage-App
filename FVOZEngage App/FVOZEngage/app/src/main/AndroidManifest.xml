<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fvoz.engageapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fvoz_engage_rounded_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fvoz_engage_rounded_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.EngageApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Onboarding.OnboardFirstTimer"
            android:exported="true" >
            <intent-filter>
                <category
                    android:name="android.intent.category.LAUNCHER"
                    />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu.PageViews.SettingsEditProfilePage"
            android:exported="true" />
        <activity android:name=".Forms.DevRequestURLForm" />
        <activity android:name=".Menu.Dashboard" />
        <activity android:name=".Menu.Content.UserSettingPage" />
        <activity android:name=".Menu.PageViews.EventsViewPage" />
        <activity android:name=".Menu.PageViews.ProjectsViewPage" />
        <activity android:name=".Menu.PageViews.SermonPageView" />
        <activity android:name=".Splash.RequestSuccessSplash" />
        <activity android:name=".Menu.Content.SermonsListPage" />
        <activity android:name=".Menu.Content.ChurchProjectListPage" />
        <activity android:name=".Menu.Content.RequestFormsPage" />
        <activity android:name=".Menu.Content.SeminarsAndEventListPage" />
        <activity android:name=".Splash.RegistrationSuccessSplash" />
        <activity android:name=".Forms.Register" />
        <activity android:name=".Splash.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Forms.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>